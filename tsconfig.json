{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "config/*": ["config/*"],
            "utils/*": ["utils/*"],
            "resources/*": ["../resources/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
